<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NEWCALC"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E39A2F</item>
        <item name="colorPrimaryVariant">#D3A620</item>
        <item name="colorOnPrimary">#D3C01D</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#C2D129</item>
        <item name="colorSecondaryVariant">#8BCD3E</item>
        <item name="colorOnSecondary">#48D14E</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="ViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_height</item>
        <item name="android:background">@color/cardview_light_background</item>
        <item name="android:textSize">@dimen/view_text_size</item>
    </style>


    <style name="LayoutsStyles">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_right</item>
    </style>


    <style name="CalcButtonStyle">
        <item name="android:layout_width">@dimen/sample_button_width</item>
        <item name="android:layout_height">@dimen/sample_button_height</item>
        <item name="android:layout_margin">@dimen/sample_button_margin</item>
        <item name="android:fontFamily">@string/sample_button_font</item>
        <item name="android:textSize">@dimen/sample_button_text_size</item>
        <item name="android:backgroundTint">@color/button_background_tint_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="CalcButtonStyle.BottomButton">
        <item name="android:layout_width">@dimen/theme_clear_width</item>
        <item name="android:layout_height">@dimen/theme_clear_height</item>
        <item name="android:textSize">@dimen/theme_clear_text_size</item>
    </style>

    <style name="ChangeThemeButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/theme_button_layout_margin</item>
        <item name="android:textSize">@dimen/theme_button_text_size</item>
        <item name="rippleColor">@color/button_text_color</item>
        <item name="strokeWidth">@dimen/sample_button_margin</item>
        <item name="android:backgroundTint">@color/button_background_tint_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="newCalcDay">styles_day</style>
</resources>